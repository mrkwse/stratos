{{#is "home"}}
    <div class="cover">
        <div class="cover-photo {{#if @blog.cover_image}}" style="background-image: url({{@blog.cover_image}}){{else}}no-cover{{/if}}"></div>
        <div class="cover-content">
            <h1 class="cover-title">{{@blog.title}}</h1>
            <div class="cover-subheading">{{@blog.description}}</div>
            </div>
    </div>
{{/is}}

{{!-- The main content area --}}
<main id="site-main" class="site-main outer" role="main">
    <div class="inner">

        <div class="post-feed">
            {{#foreach posts}}

                {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
                {{> "post-preview"}}

            {{/foreach}}
        </div>

    </div>
</main>
