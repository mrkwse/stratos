<article class="post-preview {{post_class}}{{#unless feature_image}} no-image{{/unless}}">
    <div class="post-card-content">
        <a class="post-card-content-link" href="{{url}}">
            <div class="post-preview-header {{#if feature_image}}preview-header-with-image{{/if}}">
                {{#if feature_image}}
                <div class="post-preview-header-image" style="background-image: url({{feature_image}})"></div>
                {{/if}}
                <div class="post-info">
                    <h1 class="post-preview-title">{{title}}</h1>
                    <div class="date-dummy">
                        <date>{{date format="DD MMMM YYYY"}}</date>
                    </div>
                </div>
            </div>
            <section class="post-card-excerpt">
                <p>{{excerpt words="42"}}â€¦</p>
            </section>
        </a>
